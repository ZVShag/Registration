<Window x:Class="WpfApp2.newemail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="newemail" Height="450" Width="800">
    <Grid>
        <Button Name="EmailButton" Content="Потвердить" Background="Peru"  HorizontalAlignment="Left"  Margin="294,309,0,0" VerticalAlignment="Top" Width="191" Height="36" FontSize="15" FontWeight="Bold" Click="EmailButton_Click"/>

        <Label Content="изменение адреса электронной почты" HorizontalAlignment="Left" Margin="196,72,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="nemail" HorizontalAlignment="Left" Margin="245,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="285" Height="25"/>
        <Label Content="введите новый адрес" HorizontalAlignment="Left" Margin="285,155,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <PasswordBox x:Name="pas" HorizontalAlignment="Left" Margin="205,219,0,0" VerticalAlignment="Top" Width="365" Height="33"/>
        <Label Content="введите пароль" HorizontalAlignment="Left" Margin="316,260,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
